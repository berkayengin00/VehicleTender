
@{
    Layout = null;
	var message = TempData["message"] != null ? TempData["message"].ToString() : "";

}
@using VehicleTender.DAL.Migrations
@model VehicleTender.Entity.View.LoginVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Giriş Yap</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/TemplateContent/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/TemplateContent/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/TemplateContent/dist/css/adminlte.min.css">
    
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>


    @if (message != null)
    {
	    <meta name="notificationMessage" content="@message" />
    }
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        @using (@Html.BeginForm("Index", "Login", FormMethod.Post))
        {

            @Html.AntiForgeryToken()
            <div class="card card-outline card-primary">
                <div class="card-header text-center">
                    <a href="../../index2.html" class="h1"><b>Araç </b>İhale</a>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Admin için giriş ekranı</p>


                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", required = "true", Type = "email" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "parola", required = "true", Type = "password" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                                @Html.CheckBoxFor(x=>x.RememberMe,new {Type="checkbox"})
		                        <label for="remember">
			                        Beni Hatırla
		                        </label>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                        <!-- /.col -->
                    </div>


                    @*<div class="social-auth-links text-center mt-2 mb-3">
                            <a href="#" class="btn btn-block btn-primary">
                                <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                            </a>
                            <a href="#" class="btn btn-block btn-danger">
                                <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                            </a>
                        </div>*@
                    <!-- /.social-auth-links -->

                    <p class="mb-1">
                        <a href="forgot-password.html">Şifremi Unuttum</a>
                    </p>
                    <p class="mb-0">
                        <a href="register.html" class="text-center">Kayıt Ol</a>
                    </p>
                </div>
                <!-- /.card-body -->
            </div>
        }

        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/TemplateContent/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/TemplateContent/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/TemplateContent/dist/js/adminlte.min.js"></script>
</body>
</html>
