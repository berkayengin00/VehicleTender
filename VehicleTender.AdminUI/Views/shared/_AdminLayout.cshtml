    @RenderSection("head", false)

    <script>
    $(function () {
        var message = "@message";
        let isSuccess = @(isSuccess);
        if (isSuccess == false && message != "") {
            toastr.error(message);
        }
        if(isSuccess==true && message!=""){
            toastr.success("İşlem başarılı", message);
        }
    });
</script>

