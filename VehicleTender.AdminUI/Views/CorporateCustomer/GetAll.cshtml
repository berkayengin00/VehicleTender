@using VehicleTender.Entity.Concrete

@{
    ViewBag.Title = "CorporateCustomersGetAll";
    Layout = "~/Views/shared/_AdminLayout.cshtml";
}
@model List<VehicleTender.Entity.Concrete.CorporateCustomer>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
	                    <h3 class="card-title">Kurumsal Müşteriler</h3>
	                    <div class="row text-end">
		                    <div class="col-md3">
			                    @Html.ActionLink("Kurumsal Müşteri Ekle", "Add", "CorporateCustomer", "Add", new { @class = "btn btn-outline-success" })
		                    </div>
	                    </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Şirket Adı</th>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>Telefon Numarası</th>
                                    <th>Email</th>
                                    <th>Kayıt Tarihi</th>
                                    <th>İl</th>
                                    <th>İlçe</th>
	                                <th>Adres</th>
	                                <th>Aktif Mi?</th>
	                                <th></th>
	                                <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (CorporateCustomer item in Model)
                                {
                                    <tr>
                                        @Html.HiddenFor(x => item.Id)

                                        <td>@item.CompanyName</td>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Email</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.Province</td>
                                        <td>@item.District</td>
                                        <td>@item.Neighbourhood</td>
                                        <td>@item.IsActive</td>
                                        <th>
                                            @Html.ActionLink("Sil","SoftDelete",new {userId=item.Id},new {@class="btn btn-outline-danger"})
                                        </th><th>
                                            @Html.ActionLink("Güncelle","Update",new {userId=item.Id},new {@class="btn btn-outline-warning"})
                                        </th>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Şirket Adı</th>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>Telefon Numarası</th>
                                    <th>Email</th>
                                    <th>Kayıt Tarihi</th>
                                    <th>İl</th>
                                    <th>İlçe</th>
                                    <th>Adres</th>
                                    <th>Aktif Mi?</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>


@section jscode
{
	<script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "pageLength":7,
            });
        });</script>
}

